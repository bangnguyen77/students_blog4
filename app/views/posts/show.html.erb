<div class="row" id="post_show">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading post_image">
        <%= image_tag @post.image.url %>
      </div>

      <div class="panel-body">
        <h1><%= @post.title %></h1>
        <p class="content"><%= @post.content %></p>
      </div>

      <div class="panel-footer">
        <div class="row">
          <div class="col-md-6">
            <p class="user">Submitted by <%= @post.user.email %></p>
          </div>

          <div class="col-md-6">
            <div class="pull-right">
              <%if user_signed_in? %>
                <%= link_to "Edit Post", edit_post_path, class: "btn btn-default" %>
                <%= link_to "Delete", post_path, method: :delete, data: { confirm: "Are you sure you want to delete this post?" }, class: "btn btn-default" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
